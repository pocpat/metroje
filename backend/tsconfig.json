{
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js", "node_modules"],

  "compilerOptions": {
    "types": ["jest"],
    // "module": "NodeNext",
    "module": "commonjs",
    "baseUrl": "src/**",
    "moduleResolution": "node",
    "checkJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },

  "include": ["src/**/*"],
 
}

