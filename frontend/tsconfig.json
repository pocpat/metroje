{
 "compilerOptions": {
  "plugins": [{ "name": "typescript-plugin-css-modules" }],
     "noImplicitAny": true,
      // "target": "ES5",
    //  "module": "ES2015",
      "esModuleInterop": true,
      "jsx": "react",
      "module": "esnext",
